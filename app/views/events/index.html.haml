.container-fluid
  .col-md-1
    .left
      left side
      %a{ href: new_event_url } Create a New Event

  .col-md-9
    .center.center_scroll
      .center_contents
        %h1 All Events


        %br

        .events_scroll
          - last_date = @events.first.date
          .date= last_date
          - @events.each do |event|
            - if event.date != last_date
              - last_date = event.date
              .date= last_date
              %table.event_row
                %tr
                  %td.event_column
                    = form_for(event, url: edit_event_url(event.id), method: :get) do
                      - color = cycle('even', 'odd')
                      .event{ class: color }
                        %table.events_display
                          %tr
                            %td
                              .value#name= event.display_name
                            %td
                              .value#venue= event.venue.try(:name) || 'N/A'
                  %td.select_column
                    .status_select v



  .col-md-1
    .right right side

:javascript
  initEventHover();
  initSubmitEvent();
