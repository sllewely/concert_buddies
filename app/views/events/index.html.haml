.container-fluid
  .col-md-1
    .left left side
  .col-md-9
    .center.center_scroll
      .center_contents
        %h1 All Events

        %a{ href: new_event_url } Create a New Event

        .events_scroll
          - @events.each do |event|
            = form_for(event, url: edit_event_url(event.id), method: :get) do
              - color = cycle('even', 'odd')
              .event{ class: color }
                %table.events_display
                  %tr
                    %td
                      .value#name= event.name
                    %td
                      .value#venue= 'Bowery Ballroom'

  .col-md-1
    .right right side

:javascript
  initEventHover();
  initSubmitEvent();
