%h1 Create a New Event

.form#new_event
  = form_for @event do |f|
    .field
      %label Name
      %br
      = f.text_field :name
    .field
      %label Description
      %br
      = f.text_area :description
    .field
      = f.date_field :date
    .field
      = f.time_field :start_time
    %button Submit Form
